@model List<UserScore> 
    <div class="container">
        <h1 class="m-5 text-center">High score</h1>
        <table class="table" id="playerTable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Player Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Score</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < @Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@Model[i].PlayerName</td>
                        <td>@Model[i].FirstName</td>
                        <td>@Model[i].LastName</td>
                        <td>@Model[i].QuizTime.Date.ToShortDateString()</td>
                        <td>@Model[i].QuizTime.ToLongTimeString()</td>
                        <td>@Model[i].PlayerScore</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
