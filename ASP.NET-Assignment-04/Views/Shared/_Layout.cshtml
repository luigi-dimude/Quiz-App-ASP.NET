<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_Assignment_04</title>
    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,500,700"
          rel="stylesheet" />
    @*Bootstrap 5*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid full-height">
        <div class="row align-items-start full-height">
            <aside class="col menu">
                <ul class="nav flex-column">
                    <li class="menu-links">
                        <a href="/">Home</a>
                    </li>
                    <li class="menu-links">
                        <a asp-controller="Home" asp-action="Index"
                   asp-route-view="Score">High Score</a>
                    </li>
                </ul>
            </aside>
            <main class="col-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @*Bootstrap JS*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
